<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.klissman20.punto3p2.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Elija Figura" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuadrado"
            android:textSize="25dp"
            android:id="@+id/rb_Cuadrado"
            android:layout_margin="7dp"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circulo"
            android:textSize="25dp"
            android:id="@+id/rb_Circulo"
            android:layout_margin="7dp"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Triangulo"
            android:textSize="25dp"
            android:id="@+id/rb_Triangulo"
            android:layout_margin="7dp"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rectangulo"
            android:textSize="25dp"
            android:id="@+id/rb_Rectangulo"
            android:layout_margin="7dp"
            android:onClick="onRadioButtonClicked"/>

    </RadioGroup>


    <LinearLayout
        android:id="@+id/ll_cuadrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_lcuadrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Lado"
            android:gravity="center"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_circulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="5dp">

        <EditText
            android:id="@+id/et_rcirculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="Radio"
            android:inputType="number"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Triangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_btriangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Base"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_atriangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altura"
            android:inputType="number"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Rectangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_bRectangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Base"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_lRectangulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lado"
            android:inputType="number"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/btn_calcular"/>

    <EditText
        android:id="@+id/et_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:gravity="center"/>

</LinearLayout>
